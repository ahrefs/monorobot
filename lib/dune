(library
 (name lib)
 (libraries curl curl.lwt nocrypto hex atdgen base stdio lwt lwt.unix uri
   devkit devkit.core base64)
 (preprocess
  (pps lwt_ppx)))

(rule
 (targets github_t.ml github_t.mli)
 (deps github.atd)
 (action
  (run atdgen -t %{deps})))

(rule
 (targets github_j.ml github_j.mli)
 (deps github.atd)
 (action
  (run atdgen -j %{deps})))

