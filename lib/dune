(rule
 (target failed_builds_webhook_gen.ml)
 (deps ../db/sql/failed_builds_webhook.sql)
 (action
  (with-stdout-to
   %{target}
   (run %{bin:sqlgg} -gen caml_io -name make -params unnamed %{deps}))))
