(library
 (name lib)
 (libraries atdgen atdgen-runtime base base.caml biniou cstruct curl curl.lwt
   devkit devkit.core hex lwt lwt.unix nocrypto omd re stdio uri yojson)
 (preprocess
  (pps lwt_ppx)))

(rule
 (targets github_t.ml github_t.mli)
 (deps github.atd)
 (action
  (run atdgen -t %{deps})))

(rule
 (targets github_j.ml github_j.mli)
 (deps github.atd)
 (action
  (run atdgen -j -j-std %{deps})))

(rule
 (targets slack_t.ml slack_t.mli)
 (deps slack.atd)
 (action
  (run atdgen -t %{deps})))

(rule
 (targets slack_j.ml slack_j.mli)
 (deps slack.atd)
 (action
  (run atdgen -j -j-std %{deps})))

(rule
 (targets notabot_t.ml notabot_t.mli)
 (deps notabot.atd)
 (action
  (run atdgen -t %{deps})))

(rule
 (targets notabot_j.ml notabot_j.mli)
 (deps notabot.atd)
 (action
  (run atdgen -j -j-std %{deps})))
