(library
 (name lib)
 (libraries
  atdgen
  atdgen-runtime
  biniou
  cstruct
  curl
  curl.lwt
  base64
  devkit
  devkit.core
  extlib
  hex
  lwt
  lwt.unix
  nocrypto
  omd
  re2
  sexplib0
  uri
  yojson
  slack.lib)
 (preprocess
  (pps lwt_ppx)))

(rule
 (targets common_t.ml common_t.mli)
 (deps common.atd)
 (action
  (run atdgen -t %{deps})))

(rule
 (targets common_j.ml common_j.mli)
 (deps common.atd)
 (action
  (run atdgen -j -j-std %{deps})))

