(library
 (name lib)
 (libraries
  atdgen
  atdgen-runtime
  base64
  biniou
  curl
  curl.lwt
  devkit
  devkit.core
  digestif
  extlib
  lwt
  lwt.unix
  ocamldiff
  omd
  ptime
  ptime.clock
  re2
  sexplib0
  sqlgg.sqlite3
  sqlgg.traits
  sqlite3
  uri
  yojson
  text_cleanup)
 (preprocess
  (pps lwt_ppx)))

(rule
 (targets common_t.ml common_t.mli)
 (deps common.atd)
 (action
  (run atdgen -t %{deps})))

(rule
 (targets common_j.ml common_j.mli)
 (deps common.atd)
 (action
  (run atdgen -j -j-std %{deps})))

